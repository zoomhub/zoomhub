#!/bin/bash


# Commands
case "$1" in
install)
    npm install
    ;;
run)
    npm start
    ;;
ping)
    ansible --user zoomhub --inventory-file deployment/hosts all -m ping
    ;;
bootstrap)
    # Pre-req: sshpass
    if ! [ $(which sshpass) ]; then
        echo "Installing sshpass..."
        # Via: http://www.hashbangcode.com/blog/installing-sshpass-osx-mavericks
        curl -O -L http://downloads.sourceforge.net/project/sshpass/sshpass/1.05/sshpass-1.05.tar.gz \
            && tar xvzf sshpass-1.05.tar.gz
        rm sshpass-1.05.tar.gz
        cd sshpass-1.05
        ./configure
        make
        echo "Running sudo command; enter your sudo password when prompted."
        sudo make install
        cd - > /dev/null
        rm -rf sshpass-1.05
    fi

    # Pre-req: passlib
    if ! [ $(pip freeze | grep passlib) ]; then
        echo "Installing passlib..."
        # Via: https://pythonhosted.org/passlib/install.html
        # HACK: Doing so as sudo because I seem to need that on my computer.
        echo "Running sudo command; enter your sudo password when prompted."
        sudo pip install passlib
    fi

    echo "Bootstrapping server; enter serverâ€™s root password when prompted."
    ansible-playbook --inventory-file deployment/hosts \
                     --ask-pass deployment/bootstrap.yml
    ;;
setup)
    ansible-playbook --inventory-file deployment/hosts deployment/setup.yml
    ;;
deploy)
    ansible-playbook --inventory-file deployment/hosts deployment/deploy.yml
    ;;
*)
    echo "Unknown command: $1. Try: bootstrap|ping|setup|deploy"
    ;;
esac
